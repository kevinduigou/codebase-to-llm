{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Desktop Context Copier",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/codebase_to_llm/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Run FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["codebase_to_llm.interface.fastapi.app:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": ["-A", "codebase_to_llm.infrastructure.celery_download_queue", "worker", "--loglevel=info"],
            "console": "integratedTerminal"
        },
        {
            "name": "Run Behave Tests - Video Key Insights",
            "type": "debugpy",
            "request": "launch",
            "module": "behave",
            "args": ["features/video_key_insights.feature", "--verbose"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env-development"
        },
        {
            "name": "Add French subtitles to test.mkv",
            "type": "debugpy",
            "request": "launch",
            "module": "behave",
            "args": ["features/video_subtitles.feature", "--name", "Get ASS file by video ID", "--verbose"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env-development"
        },
        {
            "name": "Run Test Subtitle Direct",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_subtitle_direct.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Magic ASS Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_magic_ass.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/docker/env-vars-dev.yaml"
        }
    ]
}
